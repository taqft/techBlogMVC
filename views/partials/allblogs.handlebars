{{#if blogs}}
{{#each blogs as |blog|}}
<div class="card mt-2 p-3">
  <div class="row">
    <div class="col-md-8">
      <h4><a class="text-decoration-underline" href="/blog/{{ blog.id }}">{{ blog.title }}</a></h4>
    </div>
    <p class="text-dark">{{ blog.content }}</p>
    <p class="text-muted">Submitted by {{ user.username }} on {{ blog.createdAt }}</p>
  </div>
</div>
{{/each}}
{{else}}
<div class="card mtb-2">
  <div class="card-body text-muted">
    <p class="card-text"> Sorry, no blogs have been written at this time. Perhaps one will appear.</p>
  </div>
</div>
{{/if}}
